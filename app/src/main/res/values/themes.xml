<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>


        <!-- Theme for switches-->
        <item name="colorControlActivated">@color/blue_app_theme</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue_app_theme</item>
        <item name="background">@color/blue_app_theme</item>
        <item name="android:titleTextStyle">@style/MyActionBarTextStyle</item>
        <item name="titleTextStyle">@style/MyActionBarTextStyle</item>


    </style>


    <style name="MyActionBarTextStyle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title"
        tools:targetApi="16">

        <item name="android:textColor">@color/titleBarTextColor</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>