<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="actionBarTabStyle">@style/MyTabStyle</item>
        <item name="android:actionBarTabStyle">@style/MyTabStyle</item>

        <item name="actionBarTabBarStyle">@style/MyTabBarStyle</item>
        <item name="android:actionBarTabBarStyle">@style/MyTabBarStyle</item>

        <!-- Theme for switches-->
        <item name="colorControlActivated">@color/blue_app_theme</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue_app_theme</item>
        <item name="background">@color/blue_app_theme</item>
        <item name="android:titleTextStyle">@style/MyActionBarTextStyle</item>
        <item name="titleTextStyle">@style/MyActionBarTextStyle</item>
        <item name="android:backgroundStacked">@color/blue_app_theme</item>
        <item name="backgroundStacked">@color/blue_app_theme</item>
    </style>



    <style name="MyTabStyle" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:showDividers">none</item>
        <item name="android:background">@drawable/tab_indicator</item>
    </style>


    <style name="MyTabBarStyle" parent="Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:showDividers">none</item>

    </style>




    <style name="MyActionBarTextStyle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title"
        tools:targetApi="16">

        <item name="android:textColor">@color/titleBarTextColor</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>


    </style>

</resources>