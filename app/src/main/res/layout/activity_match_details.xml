<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.bluealeaf.dota2ticker.MatchDetailsActivity">

    <TextView
        android:id="@+id/matchStatus"
        android:text="T1 vs T2"
        android:textColor="@color/highlighted_text_material_light"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/leagueName"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/format"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/t1Logo"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/t1Bold"
            android:text="T1 Bold"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_toRightOf="@+id/t1Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/t2Bold"
            android:text="T2 Bold"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_toLeftOf="@+id/t2Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>


        <ImageView
            android:id="@+id/t2Logo"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="VS"
            android:textStyle="bold"
            android:textSize="22sp"
            android:id="@+id/vs" />
    </RelativeLayout>



</LinearLayout>
